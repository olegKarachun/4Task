@{
    ViewBag.Title = "Регистрация";
}
@model Task4.ViewModels.RegisterModel

<div class="form-group">
    <h2>Registration</h2>
</div>
<div class="form-group">
    <a asp-action="Login" asp-controller="Account">Login</a>
</div>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label asp-for="Name">Enter your name</label>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Enter your password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm your password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Register Now</button>
</form>
