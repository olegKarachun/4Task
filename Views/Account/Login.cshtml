@{
    ViewBag.Title = "Вход";
}
@model Task4.ViewModels.LoginModel

<div class="form-group">
    <h2>Autorization</h2>
</div>
<div class="form-group">
    <a asp-action="Register" asp-controller="Account">Registration</a>
</div>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Enter your password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
